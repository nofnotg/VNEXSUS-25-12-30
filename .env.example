# VNEXSUS 환경변수 설정
# 이 파일을 .env로 복사한 후 실제 값을 입력하세요
# cp .env.example .env

NODE_ENV=development
PORT=3030

# 코어 엔진 사용 여부 (토글)
USE_CORE_ENGINE=true

# Enable Google Cloud Vision OCR
ENABLE_VISION_OCR=true
USE_VISION=true
USE_TEXTRACT=false

# Google Cloud Vision OCR Configuration
GCS_BUCKET_NAME=your-bucket-name
GCS_UPLOAD_PREFIX=temp-uploads/
GCP_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_CLOUD_VISION_API_KEY=your-google-cloud-vision-api-key

# Google Cloud Pub/Sub Configuration
PUBSUB_TOPIC=projects/your-project-id/topics/your-topic

# 배치 처리 설정
PARALLEL_LIMIT=6
LIMIT_CASES=50
ENABLE_VISION_IMAGE_FALLBACK=true

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.2

# Google Gemini API Configuration
GOOGLE_API_KEY=your-google-api-key
GOOGLE_GENERATIVE_AI_API_KEY=your-google-generative-ai-api-key

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# 코어 엔진 설정
DISCLOSURE_WINDOWS=3m,2y,5y
DEFAULT_CLAIM_DIAGNOSIS=""

# 보안 설정
CORS_ORIGIN=http://localhost:3030
MAX_FILE_SIZE=209715200
MAX_FILES_PER_REQUEST=5
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# 로깅 설정
LOG_LEVEL=info
DEBUG_MODE=false

# 테스트 환경 설정
SKIP_PDF_TESTS=false
TEST_DATA_PATH=./tests/data

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS origins (same-origin recommended; backend serves frontend)
# FRONTEND_PORT=3030
REPORTS_PDF_ROOT=/path/to/reports_pdf
